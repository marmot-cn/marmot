<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
 <description>The coding standard for saas.</description>
  <!-- 应用代码文件夹 -->
  <file>Application</file>
  <!-- 核心框架代码文件夹 -->
  <file>System</file>
  <!-- 核心文件 -->
  <file>Core.php</file>
  <!-- 路由文件 -->
  <file>index.php</file>
  <!-- 单元测试文件 -->
  <file>tests</file>

  <!-- 报告格式为简报 --> 
  <arg name="report" value="summary"/>
  <!-- 现实进度 -->
  <arg value="p"/>
  <!-- 让输出显示颜色,默认输出是无色 -->
  <arg value="-colors"/>
  <!-- 设定报告输出宽度,防止有些文件名字不能现实完全 -->
  <arg name="report-width" value="140"/>

  <!-- 代码标准为PSR2 -->
  <rule ref="PSR2"/>
</ruleset>
